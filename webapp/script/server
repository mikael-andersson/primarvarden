PROJECT_ROOT=`dirname $0`/../
USER=cl-user
HOME=/home/$USER
SBCL_BIN=sbcl

if [ "$1" = "home" ]
   then
   SBCL_BIN=$HOME/bin/sbcl
   SBCL_HOME=$HOME/lib/sbcl
   SBCL_CORE="--core $SBCL_HOME/sbcl.core"
fi
SWANK_PORT=4005
WEBLOCKS_PORT=8080
echo "Project root: $PROJECT_ROOT"
$SBCL_BIN $SBCL_CORE --userinit $PROJECT_ROOT/primarvarden.sbclrc $PROJECT_ROOT $WEBLOCKS_PORT $SWANK_PORT --no-linedit
